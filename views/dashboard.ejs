<main>
    <header>
        Dashboard
    </header>
    <section class="profile">
        <% if (companies.logo) { %>
            <picture>
                <source srcset="https://fdnd-agency.directus.app/assets/<%= companies.logo.id %>?avif" type="image/avif">
                <source srcset="https://fdnd-agency.directus.app/assets/<%= companies.logo.id %>?webp" type="image/webp">
                <img src="https://fdnd-agency.directus.app/assets/<%= companies.logo.id %>" alt="" height="<%= companies.logo.height %>" width="<%= companies.logo.width %>">
            </picture>    
            <% } else { %>
            <img src="/style/image/unknown.webp" alt="" height="150px" width="150px">
        <% } %>
        <div>
